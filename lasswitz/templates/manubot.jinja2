{% extends "layout.jinja2" %}

{% block content %}
<div class="content">
  <h1><span class="font-semi-bold">Lasswitz</span> <span class="smaller">Collaborative editing system</span></h1>
  <p class="lead">Welcome to <span class="font-normal">{{project}}</span>.</p>
  <h2>{{ manuscript.title }}</h2>
  <form>
      <label for="title">Title</label><br>
      <input name="title" type="text" size="100" value="{{ manuscript.title }}"><br>
      <label for="abstract">Abstract</label><br>
      <textarea name="abstract" cols="100" rows="10">{{ manuscript.abstract }}</textarea><br>
      <label for="body">Body</label><br>
      <textarea name="body" cols="100" rows="20">{{ manuscript.body }}</textarea><br>
      <label for="keywords">Keywords</label><br>
      <input name="keywords" type="text" size="80" value="{{ manuscript.keywords }}"><br>
      <input type="submit"><input type="reset">
  </form>
</div>
{% endblock content %}
